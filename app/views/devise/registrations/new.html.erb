<h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

<div class="container" style="max-width: 330px; margin: 0 auto; padding: 15px;">
    <form class="form-signup">

  <div class="form-signup row">
    <%= f.label :email, class: "sr-only" %><br />
    <%= f.email_field :email, autofocus: true, type:"email", class:"col-sm-12 form-group", style:"height: 36px;", placeholder:"Email address" %>
  </div>

  <div class="form-signup row">
    <%= f.label :password, class: "sr-only" %><br />
    <%= f.password_field :password, autocomplete: "off", class:"col-sm-12 form-group", placeholder:"Password min " + @minimum_password_length.to_s + " characters", style:"height: 36px;" %>
  </div>

  <div class="form-signup row">
    <%= f.label :password_confirmation, class: "sr-only" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"col-sm-12 form-group", placeholder:"Confirm Password", style:"height: 36px;" %>
  </div>

  <div class="form-signup row"><br />
    <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
<br />
<%= render "devise/shared/links" %>

</form>
</div>
