<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container" style="max-width: 330px; margin: 0 auto; padding: 15px;">
    <form class="form-login">
      <div class="form-login row">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, type:"email", class:"col-sm-12 form-group", style:"height: 36px;", placeholder:"Email address" %>
      </div>

  <div class="form-login row">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class:"col-sm-12", placeholder:"Password", style:"height: 36px;" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="check_box" style="padding: 15px;">
      <%= f.check_box :remember_me, class:"col-sm-2 form-group" %>
      <%= f.label :remember_me, class:"col-sm-8 form-group" %>
    </div>
  <% end -%>

  <div class="form-group row">
    <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</form>
</div>