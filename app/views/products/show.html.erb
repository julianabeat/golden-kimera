<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-xs-6">

    <%= image_tag(@product.image_url, class: "img-zoom img-thumbnail product_image", data_zoom_image: @product.image_url) %>

      <%= link_to 'Edit', edit_product_path(@product) %> |
      <%= link_to 'Home', landing_page_path %> |
      <%= link_to 'More bikes', products_path %>

    </div> <!-- end col-md-6 -->

    <div class="col-md-4 col-xs-4">

      <h3>
        <strong><%= @product.name %></strong>
      </h3>

      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>
    
      <p>
        <strong>Color:</strong>
        <%= @product.color %>
      </p>

      <p>
        <strong>Price: </strong><%= @product.price %> &euro;
      </p>

      <p class="hidden">
        <strong>Image url:</strong>
        <%= @product.image_url %>
      </p>
      
      <p><strong>Average Rating:</strong></p>
      <p><div id="#average-rating" class="rated" style="padding-left: 15px;" data-score="<%= @product.average_rating %>"></div></p>

      <%= form_tag "/payments/create" do %>
        <%= render partial: "shared/stripe_checkout_button" %>
      <% end %>
    </div> <!-- end col-md-6 -->

  </div> <!-- end row -->

  <div class="container-fluid row">
    <div class="col-md-6 col-xs-6">
        <%= render 'comments/new_comment' %>
        <%= render 'comments/comments' %>

        <%= will_paginate @comments %>
    </div>
  </div>

</div> <!-- end container-fluid -->
