<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div class="alert alert-warning" id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <h1>
      <% product.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
      </h1>
    </div>
  <% end %>
  
<div class="container-fluid">
<form class="form-group">
  <div class="form-group row">
    <%= f.label :name, class: "col-sm-2 col-form-label" %>
    <%= f.text_field :name, class: "col-sm-8", placeholder: "Name" %>
  </div>

  <div class="form-group row">
    <%= f.label :description, class: "col-sm-2 col-form-label" %>
    <%= f.text_area :description, class: "col-sm-8", placeholder: "Description"  %>
  </div>

  <div class="form-group row">
    <%= f.label :image_url, class: "col-sm-2 col-form-label" %>
    <%= f.text_field :image_url, class: "col-sm-8", placeholder: "Image url" %>
  </div>

  <div class="form-group row">
    <%= f.label :color, class: "col-sm-2 col-form-label" %>
    <%= f.text_field :color, class: "col-sm-4", placeholder: "Color" %>
  </div> 

  <div class="form-group row">
    <%= f.label :price, class: "col-sm-2 col-form-label" %>
    <%= f.text_field :price, class: "col-sm-4", placeholder: "Price" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>

<% end %>
</form>
</div>
