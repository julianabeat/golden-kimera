            <li role="separator" class="divider"></li>
            <li><a href="#">Our Customers</a></li>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

  <%= yield %>

  <footer class="site-footer">
    <div>
      <ul class="site-footer-links">
        <a class="footer-brand" href="#"><span class="glyphicon glyphicon-flash" aria-hidden="true"></span></a>
        <li>
          <a href="#">Home</a>
        </li>
        <li class="hidden-xs">
          <a href="#">About</a>
        </li>
        <li class="hidden-xs"s>
          <a href="#">Contact</a>
        </li>
        <li style="list-style: none; display: inline">
          <a id="copy-right">&copy; 2017 Bike Berlin</a>
        </li>
      </ul>
    </div>  
  </footer>

  </body>
</html>
